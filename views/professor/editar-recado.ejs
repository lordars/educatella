<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>
    <!-- Header da Página -->
    <%- include('../partials/header-professor') %>

    <main>
        <!-- Section engolba nav-left + mural de recados-->
        <section class="first-section">
            <div class="container-fluid">
                <div class="row">
                    <!-- Nav left -->
                    <%- include('../partials/professor-left') %>   

                    <!--Mural de recados-->
                  
                    <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded mural-recados">

                            <!--Título-->
                            <h3><strong>Editar Recados</strong></h3>
                          
                                <% for (acessarClasse of acessarClasse.recado) {%>
                                
                               
                                    <form id="editar-recado" method="POST" name="formEditar" action="/professor/editar-recado/<%=acessarClasse.id_recados%>" class="card p-3">
                                        <div class="page-item" >
                                            <h6><img src="/images/recados.png" alt="icone recados" class="imagens-classe"> <%= acessarClasse.titulo %> </h6>
                                            <p><%= acessarClasse.descricao %></p>
                                            <div class="form-row">
                                                <div class="form-group col-10">
                                                    <label class="texto"> Título </label> <br>
                                                    <input type="text" class="titulo" id="titulo" name="titulo" value="<%= acessarClasse.titulo %>"  size="47"></input>
                                                </div>
                                                <div class="form-group col-10">
                                                    <label class="texto"> Descrição </label> <br>
                                                    <textarea  type="text" class="descricao" id="descricao" name="descricao" rows="5" cols="50"><%= acessarClasse.descricao %></textarea> <br>
                                                    <button class="btn btn-outline-success" type="submit" rows="2" cols="50">Editar</button> 
                                                </div>
                                            </div>
                                        </div>                    
                                    </form>
                                
                               <%}%>
                                
                            </ul>
        
                           
                    </div>
                   
                </div>
            </div>

        </section>
    </main>

    <script src="/javascripts/dist/profScript/profRecadoEditar.js"></script>
    <!-- Importando Jquery -->
    <script type="text/javascript" src="/vendor/jquery.min.js"></script>
    <!-- Importando Bootstrap JS -->
    <script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/javascripts/src/main.js"></script>
</body>
</html>