<!-- Header da Página -->
<%- include('../partials/professor-head') %>


<main>

  <!-- Section engolba nav-left + Criar sala-->
  <section class="first-section">

    <div class="container criar-sala">
      <div class="row formulario-criar-sala">

        <!-- Nav left -->
        <%- include('../partials/professor-nav-left') %>

        <!--Formulário-->
        <div class="col-9 shadow-sm p-3 mb-5 bg-white rounded formulário-criar-sala">

          <!--Título-->
          <h3 class="form-criar-classe-titulo">Criar sala de aula</h3>

          <!-- Form Criar Sala -->
          <form id="form-criar-sala" method="GET" action="/professor/criar-sala">
            
            <!--Div - matéria e série-->
            <div class="form-row justify-content-center">

              <!--Matéria selector-->
              <div class="form-group col-md-4">
                <label for="inputMateria"></label>
                <select id="inputMateria" class="form-control">
                  <option selected>Matéria</option>
                  <option>Maquiavel</option>
                  <option>John Locke</option>
                </select>
              </div>

              <!--Série selector-->
              <div class="form-group col-md-4">
                <label for="inputSerie"></label>
                <select id="inputSerie" class="form-control">
                  <option selected>Série</option>
                  <option>1 col A</option>
                  <option>1 col B</option>
                  <option>2 col A</option>
                  <option>2 col B</option>
                  <option>3 col A</option>
                  <option>3 col B</option>
                </select>
              </div>
            </div>

            <!--DIV qtidade aluno e período-->
            <div class="form-row justify-content-center">

              <!--Qtidade aluno selector-->
              <div class="form-group col-md-4">
                <label for="inputQuantidade"></label>
                <select id="inputQuantidade" class="form-control">
                  <option selected>Quantidade de alunos</option>
                  <option>0 a 10</option>
                  <option>11 a 20</option>
                  <option>21 a 30</option>
                  <option>31 a 40</option>
                </select>
              </div>

              <!--Período selector-->
              <div class="form-group col-md-4">
                <label for="inputPeriodo"></label>
                <select id="inputPeriodo" class="form-control">
                  <option selected>Período</option>
                  <option>Manhã</option>
                  <option>Tarde</option>
                  <option>Noite</option>
                </select>
              </div>
            </div>

            <!--DIV Senha e button-->
            <div <div class="form-row">
              <div class="form-group col-md-4">
                <label for="inputPasswordCriarSala"></label>
                <input type="password" class="form-control" id="inputPasswordCriarSala" placeholder="Digite sua senha" name="inpuntPasswordCriarSala">
              </div>
              <button type="submit" class="btn-criar-sala">Enviar</button>
            </div>
          </form>
        </div>

      </div>
    </div>

  </section>


