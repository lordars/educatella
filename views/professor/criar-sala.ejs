<!-- Modal editar sala de aula  -->
<div id="editModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <!--Form modal-->
      <form action="" method="">

        <!--Header - titulo-->
        <div class="modal-header">
          <h4 class="modal-title">Editar informações</h4>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>

        <!--Body - alunos, periodo, conteudo-->
        <div class="modal-body">

          <!--alunos-->
          <div class="form-group">
            <label for="modal-alunos"></label>
            <input type="text" class="form-control" id="modal-alunos" placeholder="Alunos" required>
          </div>

          <!--periodo-->
          <div class="form-group">
            <label for="modal-periodo"></label>
            <input type="text" class="form-control" id="modal-periodo" placeholder="Período" required>
          </div>

          <!--conteudo-->
          <div class="form-group">
            <label for="modal-conteudo"></label>
            <textarea type="text" class="form-control" id="modal-conteudo" placeholder="Conteúdo" required></textarea>
          </div>

        </div>

        <!--Footer - buttons desistir e alterar-->
        <div class="modal-footer">
          <input type="button" class="btn-modal-cancelar" data-dismiss="modal" value="Desistir">
          <input type="submit" class="btn-modal-enviar" value="Alterar">
        </div>
        
      </form>
    </div>
  </div>
</div>


