<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>

<!-- Header da Página -->
<%- include('../partials/header') %>


<main>

    <!-- Section engolba nav-left + form postar nota-->
    <section class="first-section">

        <div class="container-fluid">
            <div class="row">

                <!-- Nav left -->
                <%- include('../partials/professor-left') %>

                <!--Formulário-->
                <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded formulário-notas">

                    <!--Título-->
                    <h3 class="form-notas-titulo">Cadastro de notas</h3>

                    <form id="cadastrar-nota" method="POST" action="/professor/postar-nota">

                        <!--DIV engloba - aluno e nota-->
                        <div class="form-row justify-content-center">

                            <!--Aluno selector -->
                            <div class="form-group col-md-6">
                                <label for="inputAluno"></label>
                                <select id="inputAluno" class="form-control">
                                    <option selected>Aluno</option>
                                    <option>Duda Beat</option>
                                    <option>Duda Beat</option>
                                    <option>Duda Beat</option>
                                    <option>Duda Beat</option>
                                </select>
                            </div>

                            <!--Nota -->
                            <div class="form-group col-md-2">
                                <label for="inputNota"></label>
                                <select id="inputNota" class="form-control">
                                    <option selected>Nota</option>
                                    <option>A</option>
                                    <option>B</option>
                                    <option>C</option>
                                    <option>D</option>
                                    <option>E</option>
                                </select>
                            </div>
                        </div>

                        <!--DIV Senha e button enviar-->
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputPassword"></label>
                                <input type="password" class="form-control" id="inputPasswordNota"
                                    placeholder="Digite sua senha">
                            </div>
                            <button type="submit" class="btn-enviar-nota">Enviar</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>

    </section>
</main>

<!-- Importando Jquery -->
<script type="text/javascript" src="/vendor/jquery.min.js"></script>
<!-- Importando Bootstrap JS -->
<script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="/javascripts/src/main.js"></script>
</body>

</html>