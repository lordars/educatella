<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>

<!-- Header da Página -->
<%- include('../partials/header-professor') %>


<main>

    <!-- Section engolba nav-left + form postar nota-->
    <section class="first-section">

        <div class="container-fluid">
            <div class="row">

                <!-- Nav left -->
                <%- include('../partials/professor-left') %>

                <!--Formulário-->
                <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded formulário-notas">

                    <!--Título-->
                    <h3 class="form-notas-titulo">Gerenciar notas dos Alunos</h3>
                    <% for (gerenciarDB.aluno of gerenciarDB.aluno ) {%>
                        <form action="/professor/gerenciar-nota-aluno/<%=gerenciarDB.aluno.id%>" class="card p-3" method="post">
                          <input type="hidden" name="id_classe" value="<%= acessarClasse.id %>">
                          <div class="mb-3 offset-2 col-8 text-center">
                              <img class="imagem-professor" src="/images/<%=gerenciarDB.aluno.usuarioAluno.imagem%>">
                              <p class="texto"><%=gerenciarDB.aluno.usuarioAluno.nome%></p>
                            </form>
                            <%}%>
                    <div class="container-fluid">
                        <div class="row p-3 mb-5">
                            <div>
                            <ul>
                                    <li>nome tarefa hacer un for off</li>
                                    <a class="texto-link" href="/uploads/<%=tarefas.arquivo%>" download="<%=tarefas.arquivo%>"></a>
                                    <p>nota:<select name="cBoxNota" id="nota">
                                        <option value="">1</option>
                                        <option value="">2</option>
                                        <option value="">3</option>
                                        <option value="">4</option>
                                        <option value="">5</option>
                                        <option value="">6</option>
                                        <option value="">7</option>
                                        <option value="">8</option>
                                        <option value="">9</option>
                                        <option value="">10</option>
                                    </select> </p>
                                    <button type="submit" class=" btn btn-outline-primary">Por Nota</button>
                                    
                                </ul>
                            </div>
                           
                            </div>
                    
                          </div>
                        </div>


                    </form>
                </div>

            </div>
        </div>

    </section>
</main>

<!-- Importando Jquery -->
<script type="text/javascript" src="/vendor/jquery.min.js"></script>
<!-- Importando Bootstrap JS -->
<script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="/javascripts/src/main.js"></script>
</body>

</html>