                    <!--Título-->
                    <h3 class="form-notas-titulo">Gerenciar notas dos Alunos</h3>
                    
                    <% for (tarefasAlunos of tarefas ) {%>
                        <% for (tarefa of tarefasAlunos.tarefasAlunos ) {%>

                    <div class="container-fluid">
                    <div class="row p-3 mb-5">
                        <div>
                            <ul>
                                <form method="POST"  action="/professor/poner-nota-aluno/<%=tarefa.id_tarefa%>" class="card p-1" >
                                    <input type="hidden" name="id_classe" value="<%=acessarClasse.id%>">
