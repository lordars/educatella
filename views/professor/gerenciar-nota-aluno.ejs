<!-- Header da Página -->
<%- include('../partials/header-professor') %>


<main>

    <!-- Section engolba nav-left + form postar nota-->
    <section class="first-section">

        <div class="container-fluid">
            <div class="row">

                <!-- Nav left -->
                <%- include('../partials/professor-left') %>

