<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet" >
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>

<!-- Header da Página -->
<%- include('../partials/header') %>


<main>

    <!-- Section engolba nav-left + form tarefa-->
    <section class="first-section">

        <div class="container-fluid">
            <div class="row">

                <!-- Nav left -->
                <%- include('../partials/professor-left') %>

                <!--Formulário-->
                <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded formulário-tarefa">

                    <!--Título-->
                    <h3 class="mb-5 form-tarefa-titulo">Postar tarefa</h3>


                    <form method="" action="" id="">

                        <!-- DIV Matéria, série e período -->
                        <div class="form-row">

                            <!-- Matéria -->
                            <div class="form-group col-10 text-center">

                                <textarea id="descricao" rows="4" cols="50"></textarea>

                            </div>
                            
                        </div>

                        <!--DIV Carregar tarefa-->
                        <div class="form-row justify-content-center">
                            <!-- Carregar tarefa -->
                            <div class="form-group col-md-8 tarefa">
                                <div class="file-field">
                                    <div class="btn btn-sm float-right">
                                        <span>Clique</span>
                                        <input type="file" class="sumir">
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path-validate" type="text"
                                            placeholder="Carregue o arquivo aqui">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- DIV Senha e botão -->
                        <div class="form-row input-senha">
                            <div class="form-group col-md-4 tarefa">
                                <label for="inputPasswordTarefa"></label>
                                <input type="password" class="form-control" id="inputPasswordTarefa"
                                    placeholder="Digite sua senha">
                            </div>
                            <button type="submit" class="btn-enviar-tarefa">Envie</button>
                        </div>

                    </form>

                </div>

            </div>
        </div>

    </section>
</main>


<!-- Importando Jquery -->
<script type="text/javascript" src="/vendor/jquery.min.js"></script>
<!-- Importando Bootstrap JS -->
<script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>

</body>

</html>