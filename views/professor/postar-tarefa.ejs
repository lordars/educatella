<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta chartset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- css externos -->
    <link href="/stylesheets/dist/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/dist/header.css" rel="stylesheet">
    <link href="/stylesheets/dist/professor.css" rel="stylesheet">
    <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    <!--link meterial icons + fontawesome-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.css">
</head>

<body>

    <!-- Header da Página -->
    <%- include('../partials/header-professor') %>


    <main>

        <!-- Section: form tarefa-->
        <section class="first-section">

            <div class="container-fluid">
                <div class="row">

                    <!-- Nav left -->
                    <%- include('../partials/professor-left') %>

                    <!--Formulário-->
                    <div class="offset-1 col-8 sombra p-5 mb-5 bg-white rounded formulário-tarefa">

                        <!--Título-->
                        <h3 class="mb-5 form-tarefa-titulo">Postar tarefa</h3>


                        <form action="/professor/postar" method="POST" enctype="multipart/form-data" id="">

                            <!--Titulo-->
                            <div class="form-row justify-content-center">
                                <div class="col-10">
                                    <input type="hidden" name="id_classe" value="<%= acessarClasse.id %>"
                                        class="form-control">
                                    <input type="text" name="tituloTarefa" class="form-control" placeholder="Título">
                                </div>
                            </div>
                            <br>

                            <!--Descricao-->
                            <div class="form-row justify-content-center">
                                <div class="col-10">
                                    <input type="text" name="descricaoTarefa" class="form-control"
                                        placeholder="Descrição">
                                </div>
                            </div>
                            <br>

                            <!--Arquivo-->
                            <div class="form-row justify-content-center">
                                <div class="custom-file col-10">
                                    <input type="file" class="custom-file-input" accept="txt" id="validatedCustomFile"
                                        name="arquivo">
                                    <label class="custom-file-label" for="validatedCustomFile" id="file-label">Escolher
                                        arquivo</label>
                                    <div class="invalid-feedback">Arquivo inválido</div>
                                </div>
                            </div>

                            <button type="submit" class="btn-enviar-tarefa">Enviar</button>


                        </form>

                    </div>

                </div>
            </div>

        </section>


        <!-- Section: tabela de edição de tarefa -->
        <section class="second-section">

            <div class="container-fluid">
                <div class="row">

                    <!--Tabela-->
                    <div class="offset-1 col-10 sombra p-5 mb-5 bg-white rounded formulário-tarefa">

                        <!--Título-->
                        <h3 class="mb-5 form-tarefa-titulo">Editando tarefa</h3>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Título</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Arquivo</th>
                                    <th scope="col">Editar</th>
                                    <th scope="col">Excluir</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% posts.forEach(post => { %>
                                <tr>
                                    <td>
                                        <%= post.titulo %>
                                    </td>
                                    <td>
                                        <%= post.descricao %>
                                    </td>
                                    <td>
                                        <%= post.arquivo %>
                                    </td>

                                    <td class="Editar">
                                        <button class="button-delete" title="Settings" style="color:blue"
                                            data-toggle="modal" data-target="#siteModal<%= post.id %>">
                                            <i class="material-icons">&#xE8B8;</i>
                                        </button>
                                    </td>
                                    <td class="Excluir">
                                        <form action="/professor/delete" method="POST">
                                            <input type="hidden" name="id" value="<%= post.id %>">
                                            <input type="hidden" name="id_classe" value="<%= post.classe.id %>">
                                            <button type="submit" class="button-delete"
                                                onclick="return confirm('Deseja mesmo excluir a tarefa?')"
                                                style="color: red;">
                                                <i class="material-icons">&#xE5C9;</i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                                <% });%>
                            </tbody>


                        </table>

                    </div>

                </div>
            </div>

        </section>
    </main>

    <% posts.forEach(post => { %>
    <!-- Modal editar tarefa  -->
    <div id="siteModal<%= post.id %>" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <!--Header - titulo-->
                <div class="modal-header">
                    <h4 class="modal-title">Editar informações</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <bold>&times;</bold>
                    </button>
                </div>

                <!--Form modal-->
                <form action="/professor/editar" method="POST">
                    <!--Body -->
                    <div class="modal-body">
                        <!--ID-->
                        <div class="form-group">
                            <input type="hidden" name="id_tarefa" value="<%= post.id %>" class="form-control">
                            <input type="hidden" name="id_classe" value="<%= post.classe.id %>" class="form-control">
                        </div>
                        <!--título-->
                        <div class="form-group">
                            <label for="modal-alunos" class="texto"> Título </label>
                            <input type="text" value="<%= post.titulo %>" class="form-control" id="modal-alunos" name="titulo" placeholder="Título">
                        </div>
                        <!--descricao-->
                        <div class="form-group">
                            <label for="modal-periodo" class="texto"> Descrição </label>
                            <textarea class="form-control" rows="6" id="modal-periodo" name="descricao" placeholder="Descrição"> <%= post.descricao %> </textarea>
                        </div>
                    </div>
                    <!--Footer - buttons alterar-->
                    <div class="modal-footer">
                        <button class="btn-modal-enviar" type="submit">Editar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <% });%>

    <!-- Importando Jquery -->
    <script type="text/javascript" src="/vendor/jquery.min.js"></script>
    <!-- Importando Bootstrap JS -->
    <script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/javascripts/src/actions/logout.js"></script>

</body>

</html>