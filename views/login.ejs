<!DOCTYPE html>
<html lang="pt-br">

    <head>
        <meta chartset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Icone da página -->
        <link rel="sortcut icon" href="/images/icone.png" type="image/x-icon" />
        <title> Educatella </title> 
        <!-- css externos -->
        <link href="/vendor/bootstrap.min.css" rel="stylesheet">
        <link href="/stylesheets/dist/footer.css" rel="stylesheet">
        <link href="/stylesheets/dist/login.css" rel="stylesheet">
        <!-- links de fontes google (Baloo Da 2, Pangolin e Poppins)-->
        <link href="https://fonts.googleapis.com/css?family=Baloo+Da+2|Pangolin|Poppins&display=swap" rel="stylesheet">
    </head>

    <body>

        <!-- Tag que Engloba Toda a Barra de Navegação -->
        <nav class="navbar navbar-expand-lg col-12 navbar-fixed-top">

            <div class="navbar-collapse collapse justify-content-center">

                <a href="../" class="navbar-brand" alt="home">
                    <img src="/images/logo.png" alt="logo">
                </a>

            </div>
            <!-- Icone (Margem Esquerda) -->
            
        </nav>
 
        <main>

          <h1 class="text-center titulo">Entrar no Educatella</h1>

          <div class="container">
  
              <div class="row justify-content-center">

                <div class="col-lg-5">
                
                  <form action="" method="POST">

                      <% if (typeof title !== 'undefined' && typeof message !== 'undefined') { %>
                        
                        <div class="form-group row mb-0">
      
                          <div class="col-md-12">
        
                            <div class="card mt-3 mb-3">
  
                              <div class="card-header bg-danger text-white">
                  
                                <h5 class="card-title mb-0"><%= title %></h5>
                                
                              </div>
                  
                              <div class="card-body">       
                  
                                <p class="card-text"><%= message %></p>
                  
                              </div>
                  
                            </div>
        
                          </div>
        
                        </div>

                      <% } %>
                        <br>
                      <div class="form-group row mb-0">
      
                        <label for="email" class="col-sm-12 col-form-label"></label>
      
                        <div class="col-md-12">
      
                          <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail">
      
                        </div>
      
                      </div>
                      <br>
                      <div class="form-group row">
      
                        <label for="password" class="col-sm-12 col-form-label"></label>
      
                        <div class="col-md-12">
      
                          <input type="password" class="form-control" id="password" name="password" placeholder="Digite sua senha">
      
                        </div>
      
                      </div>
                      <br>
                      <div class="form-group row">
      
                        <div class="col-md-12 text-center">
      
                          <button type="submit" class="btn w-100 botao">Login</button>
      
                        </div>
      
                      </div>
      
                  </form>

                </div>
              </div>
  
              <div class="row justify-content-center">
  
                  <div class="col-md-12">
  
                      <a class="d-block text-center mb-3" href="/redefinir-senha">Esqueceu sua senha?</a>
  
                      <p class="text-center mb-3 textFormat">É professor e ainda não tem uma conta? <a href="/cadastro/professor">Clique aqui</a></p>
  
                      <p class="text-center mb-3 textFormat">É aluno e ainda não tem uma conta? <a href="/cadastro/aluno">Clique aqui</a></p>
  
                  </div>
      
              </div>
  
          </div>

        </main>

    </body>

    <!-- Footer da Página -->
    <%- include('./partials/footer') %>
    <!-- Importando Jquery -->
    <script type="text/javascript" src="/vendor/jquery.min.js"></script>
    <!-- Importando Bootstrap JS -->
    <script type="text/javascript" src="/vendor/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/javascripts/src/actions/hideResponseCard.js"></script>
</html>