<!-- Jumbotron, Barra de Navegação, Frase Banner, Imagem Banner e Botão -->
<header>
    <div id="barra" class="container-fluid">
        <div class="row">
            <!-- Tag que Engloba Toda a Barra de Navegação -->
            <nav class="navbar navbar-expand-lg offset-1 col-11 navbar-fixed-top">
                <!-- Icone (Margem Esquerda) -->
                <a class="navbar-brand" href="../" alt="home">
                    <img src="../images/logo.png" alt="logo" id="logo-teste">
                </a>
                <!-- Barra de Navegação -->
                <div class="navbar-collapse">
                    <!-- (Margem Direita (Menu Dropdown), Login - Aluno, Professor)  -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alt="avatar">
                                <div id="avatar">
                                    <img src="<%= usuario.imagem %>">
                                </div>    
                            </a>
                            <div class="dropdown-menu" id="navDrop">
                                <a class="dropdown-item" href="" data-toggle="modal" data-target="#modal-alterar-imagem"> Alterar Imagem </a>
                                <a class="dropdown-item" href="" data-toggle="modal" data-target="#modal-alterar-nome"> Alterar Nome </a>
                                <a class="dropdown-item" href="" data-toggle="modal" data-target="#modal-alterar-email"> Alterar E-mail </a>
                                <a class="dropdown-item" href="" data-toggle="modal" data-target="#modal-alterar-senha"> Alterar Senha </a>
                                <a id="logout" class="dropdown-item" href="../" alt="login-professor"> Sair </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</header>

<section>
    <div class="modal fade" id="modal-alterar-imagem" tabindex="-1" role="dialog" aria-labelledby="modal-adicionar-classe-titulo" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-adicionar-classe-titulo"> Alterar Imagem </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">        
                    <div class="row justify-content-center">
                        <div class="col-12"> 
                            <form action="/aluno/alterarImagem" method="POST" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-12">
                                         <!--DIV Carregar tarefa-->
                                        <div class="form-row justify-content-center">
                                            <!-- Carregar tarefa -->
                                            <div class="form-group col-12 tarefa">
                                                <p class="texto"> Carregue sua imagem: </p>
                                                <div class="file-field">
                                                    <div class="btn btn-sm float-right">
                                                        <span>Clique</span>
                                                        <input type="file" class="sumir" name="img">
                                                    </div>
                                                    <div class="file-path-wrapper">
                                                        <input class="file-path-validate" type="text"
                                                            placeholder="Carregue o arquivo aqui">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-success"> Alterar Imagem </button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal"> Fechar </button>
                                </div>
                            </form>
                        </div>
                    </div>            
                </div>
            </div>
        </div>
    </div>
</section>

